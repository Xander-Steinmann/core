{
    "name": "contenttype-fields",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/contenttype-fields/src",
    "prefix": "dotcms",
    "targets": {
        "test": {
            "executor": "@angular-devkit/build-angular:karma",
            "options": {
                "tsConfig": "libs/contenttype-fields/tsconfig.spec.json",
                "karmaConfig": "libs/contenttype-fields/karma.conf.js",
                "polyfills": ["zone.js", "zone.js/testing"]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "libs/contenttype-fields/**/*.ts",
                    "libs/contenttype-fields/**/*.html"
                ]
            }
        }
    },
    "tags": []
}
